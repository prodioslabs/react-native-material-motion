{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "import/core-modules": ["react-native-material-motion"]
  },
  "rules": {
    "global-require": 0,
    "no-use-before-define": 0,
    "no-mixed-operators": 0,
    "no-restricted-syntax": 0,
    "no-nested-ternary": 0,
    "no-alert": 0,

    "import/prefer-default-export": 0,

    "react/jsx-filename-extension": 0,
    "react/sort-comp": 0,
    "react/forbid-prop-types": 0,
    "react/no-unescaped-entities": 0,
    "react/one-expression-per-single-line": 0,

    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/setupTests.js",
          "**/*.test.js",
          "**/*.stories.js",
          "**/rn-cli.config.js"
        ]
      }
    ]
  }
}
